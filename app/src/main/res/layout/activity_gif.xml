<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.giphyapp.activities.GifActivity">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/overlayGif"
                    android:layout_marginBottom="8dp"></ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/urlText"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textSize="15sp"
                    android:autoLink="web"
                    android:layout_alignLeft="@id/overlayGif"
                    android:layout_alignRight="@id/overlayGif"
                    android:layout_alignBottom="@id/overlayGif"
                    android:layout_margin="1dp"
                    android:background="#8888"
                    android:textColor="#000000"></TextView>


</RelativeLayout>
